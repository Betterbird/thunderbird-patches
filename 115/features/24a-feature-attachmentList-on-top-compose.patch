+  attachmentSplitter.addEventListener("splitter-resized", () => {
+    let newSize = Math.round(attachmentSplitter[dimension]) || 0;
+    Services.xulStore.setValue(
+      pageURL,
+      "attachmentSplitter",
+      dimension,
+      String(newSize)
