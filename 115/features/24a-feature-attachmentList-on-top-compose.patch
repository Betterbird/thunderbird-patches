+  const attachmentListConfigMap = {
+    top: {
+      parentId: "MsgHeadersToolbar",
+      resizeId: "attachmentBucket",
+      resizeDirection: "horizontal",
+      resizeDimension: "width",
+      defaultSize: 200,
+      collapseSize: 50,
+    },
+    bottom: {
+      parentId: "composeContentBox",
+      resizeId: "attachmentBucket",
+      resizeDirection: "vertical",
+      resizeDimension: "height",
