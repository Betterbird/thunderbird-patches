+NS_IMETHODIMP
+nsMsgDBView::GetColspanText(int32_t aRow, nsAString& aValue) {
+  nsresult rv = NS_OK;
+
+  nsCOMPtr<nsIMsgDBHdr> msgHdr;
+  rv = GetMsgHdrForViewIndex(aRow, getter_AddRefs(msgHdr));
+
+  if (NS_FAILED(rv) || !msgHdr) {
+    ClearHdrCache();
+    return NS_MSG_INVALID_DBVIEW_INDEX;
+  }
+  return FetchSubject(msgHdr, m_flags[aRow], aValue);
